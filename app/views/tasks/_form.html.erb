<%= simple_form_for task do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :end_at, as: :date_time_picker, input_html:
  { data:
    {
      date_format: "YYYY.MM.DD hh:mm A",
      date_day_view_header_format: 'MMM YYYY',
      date_side_by_side: true,
      date_min_date: Time.current.strftime('%Y-%m-%d')
    }
  } %>
  <%= f.input :status, collection: status_collection, include_blank: false  %>
  <%= f.submit t('buttons.submit'), class: "btn btn-primary form-control mt-xs-20" %>
  <%= link_to t('buttons.cancel'), tasks_path, class: "btn btn-default form-control mt-xs-20" %>
<% end %>